{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"check:types": {
			"dependsOn": ["^check:types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:local": {
			"cache": false
		},
		"deploy": {
			"cache": false,
			"passThroughEnv": [
				"ALCHEMY_PASSWORD",
				"ALCHEMY_STATE_TOKEN",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"CLOUDFLARE_ACCOUNT_ID",
				"CLOUDFLARE_API_TOKEN",
				"CORS_ORIGIN",
				"SKIP_ENV_VALIDATION",
				"DEPLOY_MESSAGE"
			]
		},
		"destroy": {
			"cache": false
		}
	}
}
